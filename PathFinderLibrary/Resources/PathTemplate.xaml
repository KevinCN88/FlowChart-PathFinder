<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PathFinderLibrary">


    <DataTemplate DataType="{x:Type local:Path}">

        <ContentPresenter>
            <ContentPresenter.Content>

                <Polyline x:Name="poly"
                      Stroke="{Binding Path=Fill,FallbackValue=Gray}"
                      Points="{Binding Path=WayPoints, Converter={x:Static local:ConnectionPathConverter.Instance}}"
                       StrokeThickness="2" />

            </ContentPresenter.Content>
        </ContentPresenter>
        <DataTemplate.Triggers>
            <!--<DataTrigger Value="True"
                                                            Binding="{Binding IsSelected}">
                <Setter TargetName="poly"
                                                        Property="Stroke"
                                                        Value="Black" />
             
            </DataTrigger>-->

        </DataTemplate.Triggers>
    </DataTemplate>
</ResourceDictionary>